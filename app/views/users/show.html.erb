<% if @user %>
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
  <p>
    Acounnt: <%= @user.name %>
  </p>
  <p>
    Email: <%= @user.email %>
  </p>
  <p>
    Address: <%= @user.address %>
  </p>
  <p>
    Gender: <%= @user.gender %>
  </p>
  <p>
    Phone Number: <%= @user.phone_number %>
  </p>
  <p>
    Team: Team
  </p>
  <% leaders = @user.leaders%>
  <p>
    Leader: <%= @user.leaders.any? ? leaders.pluck(:name).join(', ') : 'Empty' %>
  </p>
  <p>
    Posts: <%= @user.posts.size %>. <%= link_to 'See Posts', user_posts_path(@user) %>
  </p>
  <%= link_to "Update", edit_user_path(@user) %>
<% else %>
  <%= render 'layouts/error' %>
<% end %>
